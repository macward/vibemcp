# vibemcp configuration
# Copy this file to .env and adjust values as needed

# Root directory for vibe workspaces (default: ~/.vibe)
VIBE_ROOT=~/.vibe

# Port for the MCP server (default: 8288)
VIBE_PORT=8288

# Path to SQLite database (default: $VIBE_ROOT/index.db)
VIBE_DB=~/.vibe/index.db

# Authentication token (required for production, minimum 32 characters)
# Generate with: openssl rand -hex 32
VIBE_AUTH_TOKEN=

# Read-only mode (disable write tools)
VIBE_READ_ONLY=false
