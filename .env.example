# vibeMCP configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# DOCKER VOLUME (host path that maps to /data in container)
# =============================================================================

# LOCAL DEVELOPMENT: use your home directory
VIBE_DATA_DIR=~/.vibe

# PRODUCTION: use server path
# VIBE_DATA_DIR=/opt/apps/vibemcp

# =============================================================================
# CONTAINER ENVIRONMENT (these work inside the container)
# =============================================================================

# Root directory for vibe workspaces (inside container, don't change)
VIBE_ROOT=/data

# Path to SQLite database (inside container)
VIBE_DB=/data/index.db

# Port for the MCP server
VIBE_PORT=8288

# =============================================================================
# SECURITY
# =============================================================================

# Authentication token (required, minimum 32 characters)
# Generate with: openssl rand -hex 32
VIBE_AUTH_TOKEN=

# Read-only mode (disable write tools)
VIBE_READ_ONLY=false
